<h2>Create Beers</h2>

<%= form_for @beer do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :style %>
    <%= f.text_field :style %>
  </div>
  <div>
    <%= f.label :brewery %>
    <%= f.text_field :brewery %>
  </div>
  <div>
    <%= f.label :sample_date %>
    <%= f.date_field :sample_date %>
  </div>

  <%= f.submit "Create Beer" %>

<% end %>